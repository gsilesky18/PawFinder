# Uncomment the next line to define a global platform for your project
platform :ios, '13.1'

target 'PawFinder' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for PawFinder
  pod 'Siesta', '~> 1.0'
  pod 'Siesta/UI', '~> 1.0'
  pod 'Siesta/Alamofire', '~> 1.0'

  target 'PawFinderTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick' , '~> 2.2.0'
    pod 'Nimble', '~> 8.0.0'
  end

  target 'PawFinderUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
